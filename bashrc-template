#!/bin/bash

umask 0022

source ~/.bashrc-default
source ~/.bash-env

# Reset PATH to default
export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Make sure these paths are empty
export    LIBRARY_PATH=
export LD_LIBRARY_PATH=
export      PYTHONPATH=

# Use venv python
export       PATH=/opt/software/python-3.12/bin:$PATH
export PYTHONPATH=/opt/software/python-3.12/lib/python3.12/site-packages

# Add some software to the PATH
export PATH=/opt/software/MCNP-6.3.0/mcnp-6.3.0-Linux/bin:${PATH}
export PATH=/opt/software/ADVANTG-3.2.0/bin:${PATH}
export PATH=/opt/software/SCALE-6.3.1/bin:${PATH}

# MCNP DATAPATH
export DATAPATH=/opt/software/MCNP_DATA/MCNP_DATA

ulimit -s unlimited
